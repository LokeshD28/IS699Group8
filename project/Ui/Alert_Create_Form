import { useState } from "react";

export default function AlertCreateForm({ onAdded }: { onAdded: () => void }) {
  const [origin, setOrigin] = useState("LAX");
  const [destination, setDestination] = useState("SFO");
  const [date, setDate] = useState(new Date().toISOString().slice(0, 10));
  const [threshold, setThreshold] = useState(150);
  const [loading, setLoading] = useState(false);

  const submit = async (e: React.FormEvent) => {
    e.preventDefault(); setLoading(true);
    await fetch("/api/alerts", { method: "POST", headers: { "Content-Type": "application/json" }, body: JSON.stringify({ origin, destination, departDate: date, threshold: Number(threshold) }) });
    setLoading(false); onAdded();
  };

  return (
    <form onSubmit={submit} className="grid grid-cols-4 gap-2 items-end">
      <input className="border rounded p-2" value={origin} onChange={e=>setOrigin(e.target.value.toUpperCase())} maxLength={3} placeholder="From"/>
      <input className="border rounded p-2" value={destination} onChange={e=>setDestination(e.target.value.toUpperCase())} maxLength={3} placeholder="To"/>
      <input className="border rounded p-2" type="date" value={date} onChange={e=>setDate(e.target.value)} />
      <div className="flex gap-2">
        <input className="border rounded p-2 w-28" type="number" value={threshold} onChange={e=>setThreshold(e.target.value as any)} placeholder="USD ≤"/>
        <button className="px-3 py-2 rounded bg-black text-white" disabled={loading}>{loading?"Creating…":"Create Alert"}</button>
      </div>
    </form>
  );
}
